# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf

# Shell scripts should always use LF
*.sh text eol=lf

# Markdown files should use LF
*.md text eol=lf

# YAML files should use LF
*.yml text eol=lf
*.yaml text eol=lf

# Configuration files should use LF
*.json text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Windows-specific files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Data files - treat as binary to preserve original line endings
*.nts binary
*.tps binary
*.obj binary
*.ply binary
*.stl binary
*.txt binary
